  :orientation "horizontal"
  :space-evenly true
  :halign "fill"
  :valign "center"
  :hexpand "true"

  (box
    :orientation "vertical"
    :space-evenly "false"
    (circular-progress :class "system-cpu"
                :value {round(EWW_CPU.avg, 0)}
                :thickness 15
                :clockwise "true"
                :start-at 75
                :height 70
                :width 70
                (label :text `${round(EWW_CPU.avg, 0)}%`)
    )
    (label :text "CPU")
  )

  (box
    :orientation "vertical"
    :space-evenly "false"
    (circular-progress :class "system-ram"
