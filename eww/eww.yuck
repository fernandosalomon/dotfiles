(defwidget music [] 
	(box 
    :class "music" 
    :orientation "vertical" 
    :space-evenly "false" 
    :vexpand "true" 
    :hexpand "true" 
    :halign "fill"
    :spacing 8
    (box
      :orientation "horizontal" 
      :space-evenly "false" 
      :vexpand "false" 
      :hexpand "false" 
      :halign "fill"
      (box
        :class "music-cover"
        :style "background-image: url('${COVER}')"
        :hexpand "false"  
      )	
      (box 
        :orientation "vertical" 
        :spacing 4 
        :space-evenly "false" 
        :vexpand "false" 
        :hexpand "true"
        (label 
          :halign "center" 
          :class "song" 
          :wrap "true" 
          :limit-width 16
          :text SONG)
        (label 
          :halign "center" 
          :class "artist" 
          :wrap "true" 
          :limit-width 16 
          :text ARTIST)
        (box 
          :orientation "horizontal" 
          :spacing 8 
          :halign "center" 
          :space-evenly "true" 
          :vexpand "false" 
          :hexpand "false" 
          (button 
            :class "btn_prev" 
            :onclick "playerctl previous" 
            "玲")
          (button 
            :class "btn_play" 
            :onclick "playerctl play-pause" 
            PLAYER_STATUS)
          (button 
            :class "btn_next" 
            :onclick "playerctl next" 
            "怜")
        )        
      )
    )
    (eventbox
      :onscroll "playerctl position +1" 
      (box 
        :class "music_bar" 
        :halign "center" 
        :vexpand "true" 
        :hexpand "false"
        (scale 
          :min 0 
          :active "true" 
          :max 100 
          :value SONG_ELAPSED_TIME
        )
      )	
    )
  )
)

(defwidget volume []
  (box
      :class "volume"
      :orientation "vertical"
      :space-evenly "false"
      
      (scale    
        :class "volbar" 	  
        :value {IS_MUTED == true ? 0.0 : CURRENT_VOLUME}
        :orientation "vertical"      
        :flipped true 
        :max 101 
        :min 0 
        :onchange "amixer -D pulse sset Master {}%" 
      )
      (button   
        :onclick "pactl set-sink-mute @DEFAULT_SINK@ toggle && ${EWW_CMD} update IS_MUTED = ! IS_MUTED"   
        :class "volume-icon" 
        {IS_MUTED == true ? "󰖁" : "󰕾"}
      )
  )
)

;;---------------DATE-TIME PANEL----------------------

(defwindow date-time-panel
  :monitor 0
  :windowtype "normal"
  :geometry (geometry :x 0
                      :y "10px"
                      :width "200px"
                      :height "100px"
                      :anchor "top center")
  :stacking "fg"
  :focusable "false"
  :exclusive "false"
  (eventbox
    :onhoverlost "${EWW_CMD} close-all"
    (panel)
  )
)

