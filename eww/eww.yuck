      )
      (places)
      (apps)
      (system)
      (box
        :orientation "horizontal"
        :space-evenly "false"
        :halign "fill"
        :hexpand "true"
        :spacing 8
        (box
        :orientation "vertical"
        :space-evenly "false"
        :spacing 8
        
        (music)
        )
        (box
